<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dip"
    android:layout_height="533dip"
    android:background="#3280A0">
    <TextView
        android:id="@+id/textview_factory_dialogmenu_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dip"
        android:gravity="left"
        android:text="@string/str_textview_factory_dialogmenu_title"
        android:textColor="#ffffff"
        android:textSize="17dip" />
    <!-- For confirm -->
    <LinearLayout
        android:id="@+id/linearlayout_factory_dialogmenu_select"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="67dip">
        <TextView
            android:id="@+id/textview_factory_dialogmenu_confirm"
            android:layout_width="53dip"
            android:layout_height="33dip"
            android:layout_marginLeft="7dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/str_textview_factory_dialogmenu_confirm"
            android:textColor="#ffffff"
            android:textSize="13dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/button_state" />
        <TextView
            android:id="@+id/textview_factory_dialogmenu_cancel"
            android:layout_width="53dip"
            android:layout_height="33dip"
            android:layout_marginLeft="13dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/str_textview_factory_dialogmenu_cancel"
            android:textColor="#ffffff"
            android:textSize="13dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/button_state" />
    </LinearLayout>
    <TextView
        android:id="@+id/textview_factory_dialogmenu_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dip"
        android:gravity="left"
        android:textColor="#ffffff"
        android:textSize="17dip" />
</LinearLayout>
