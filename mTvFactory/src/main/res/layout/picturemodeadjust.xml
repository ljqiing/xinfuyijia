<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dip"
    android:layout_height="533dip"
    android:background="#3280A0">
    <TextView
        android:layout_width="133dip"
        android:layout_height="33dip"
        android:gravity="left|center_vertical"
        android:text="@string/str_picture_mode_text"
        android:textColor="#ffffff"
        android:textSize="17dip" />
    <!-- For Picture Mode -->
    <LinearLayout
        android:id="@+id/linearlayout_factory_picmode_picmode"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/button_state">
        <TextView
            android:id="@+id/textview_factory_picmode_picmode"
            android:layout_width="133dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_picmode_picmode"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/textview_factory_picmode_picmode_val"
            android:layout_width="133dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_textview_factory_picmode_picmode_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />
    </LinearLayout>
    <!-- For Brightness -->
    <LinearLayout
        android:id="@+id/linearlayout_factory_picmode_brightness"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/button_state">
        <TextView
            android:id="@+id/textview_factory_picmode_brightness"
            android:layout_width="93dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_picmode_brightness"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/textview_factory_picmode_brightness_val"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_textview_factory_picmode_default_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <ProgressBar
            android:id="@+id/progressbar_facroty_picmode_brightness"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:layout_width="133dip"
            android:layout_height="5dip"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="7dip"
            android:layout_below="@+id/progressbar_factory_picmode_brightnessbelow"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>
    <!-- For Contrast -->
    <LinearLayout
        android:id="@+id/linearlayout_factory_picmode_contrast"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/button_state">
        <TextView
            android:id="@+id/textview_factory_picmode_contrast"
            android:layout_width="93dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_picmode_contrast"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/textview_factory_picmode_contrast_val"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_textview_factory_picmode_default_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <ProgressBar
            android:id="@+id/progressbar_facroty_picmode_contrast"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:layout_width="133dip"
            android:layout_height="5dip"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="7dip"
            android:layout_below="@+id/progressbar_factory_picmode_contrastbelow"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>
    <!-- For Saturation -->
    <LinearLayout
        android:id="@+id/linearlayout_factory_picmode_saturation"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/button_state">
        <TextView
            android:id="@+id/textview_factory_picmode_saturation"
            android:layout_width="93dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_picmode_saturation"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/textview_factory_picmode_saturation_val"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_textview_factory_picmode_default_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <ProgressBar
            android:id="@+id/progressbar_facroty_picmode_saturation"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:layout_width="133dip"
            android:layout_height="5dip"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="7dip"
            android:layout_below="@+id/progressbar_factory_picmode_saturationbelow"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>
    <!-- For Hue -->
    <LinearLayout
        android:id="@+id/linearlayout_factory_picmode_hue"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/button_state">
        <TextView
            android:id="@+id/textview_factory_picmode_hue"
            android:layout_width="93dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_picmode_hue"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/textview_factory_picmode_hue_val"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_textview_factory_picmode_default_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <ProgressBar
            android:id="@+id/progressbar_facroty_picmode_hue"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:layout_width="133dip"
            android:layout_height="5dip"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="7dip"
            android:layout_below="@+id/progressbar_factory_picmode_huebelow"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>
    <!-- For Sharpness -->
    <LinearLayout
        android:id="@+id/linearlayout_factory_picmode_sharpness"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/button_state">
        <TextView
            android:id="@+id/textview_factory_picmode_sharpness"
            android:layout_width="93dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_picmode_sharpness"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/textview_factory_picmode_sharpness_val"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_textview_factory_picmode_default_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <ProgressBar
            android:id="@+id/progressbar_facroty_picmode_sharpness"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:layout_width="133dip"
            android:layout_height="5dip"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="7dip"
            android:layout_below="@+id/progressbar_factory_picmode_sharpnessbelow"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>
    <!-- For Backlight -->
    <LinearLayout
        android:id="@+id/linearlayout_factory_picmode_backlight"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/button_state">
        <TextView
            android:id="@+id/textview_factory_picmode_backlight"
            android:layout_width="93dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_picmode_backlight"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/textview_factory_picmode_backlight_val"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_textview_factory_picmode_default_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />
        <ProgressBar
            android:id="@+id/progressbar_facroty_picmode_backlight"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:layout_width="133dip"
            android:layout_height="5dip"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="7dip"
            android:layout_below="@+id/progressbar_factory_picmode_backlightbelow"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>
</LinearLayout>
